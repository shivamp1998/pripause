{
    "name": "pri-pause",
    "manifest_version": 3,
    "version": "0.0.1",
    "author": "sarvesh.pandey@venturepact.com",
    "description": "Pri-Pause Auto detects Media Device Plug-out and Pauses the media in Chrome Browser", 
    "content_scripts": [
        {
            "matches": [ "<all_urls>"],
            "css": [],
            "js": ["content.js"]
        }
    ],
    "icons" : {
        "16" : "logo16.png",
        "32" : "logo32.png",
        "48" : "logo48.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ]
}